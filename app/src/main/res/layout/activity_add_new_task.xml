<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AddNewTaskActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montesemibold"
            android:gravity="center"
            android:paddingRight="@dimen/_45sdp"
            android:text="Add Self Task"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_14sdp" />

        <ImageView
            android:id="@+id/ivSupport"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/support" />

    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <!-- **** Place Your Content Here **** -->

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_3sdp"
            android:background="@drawable/toolbarshadow" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/rvMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_45sdp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_45sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    style="@style/App_TextViewSmall"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Task Type *"
                    android:textColor="@color/colorBlue" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/etfieldbackgroundgrey">

                    <Spinner
                        android:id="@+id/spReasons"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"

                        android:paddingLeft="@dimen/_10sdp"
                        android:textSize="@dimen/_10sdp" />
                </RelativeLayout>


                <TextView
                    style="@style/App_TextViewSmall"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Task Details *"
                    android:textColor="@color/colorBlue" />

                <EditText
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_55sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@drawable/etfieldbackgroundgrey"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:lines="2"
                    android:nextFocusDown="@+id/etEnboltId"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    style="@style/App_TextViewSmall"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Start Time"
                    android:textColor="@color/colorBlue"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvPeakDate"
                        style="@style/App_EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/monteregular"
                        android:gravity="center_vertical"
                        android:imeOptions="actionNext"
                        android:inputType="none"
                        android:paddingLeft="@dimen/_10sdp"
                        android:text="Task Start Date"
                        android:textSize="@dimen/_10sdp" />


                    <TextView
                        android:id="@+id/tvPeakHoursStart"
                        style="@style/App_EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/monteregular"
                        android:gravity="center_vertical"
                        android:imeOptions="actionNext"
                        android:inputType="none"
                        android:paddingLeft="@dimen/_10sdp"
                        android:text="Task Start Time"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

                <TextView
                    style="@style/App_TextViewSmall"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="End Time"
                    android:textColor="@color/colorBlue"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvEndTaskDate"
                        style="@style/App_EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/monteregular"
                        android:gravity="center_vertical"
                        android:imeOptions="actionNext"
                        android:inputType="none"
                        android:paddingLeft="@dimen/_10sdp"
                        android:text="Task End Date"
                        android:textSize="@dimen/_10sdp" />


                    <TextView
                        android:id="@+id/tvEndTaskHour"
                        style="@style/App_EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/monteregular"
                        android:gravity="center_vertical"
                        android:imeOptions="actionNext"
                        android:inputType="none"
                        android:paddingLeft="@dimen/_10sdp"
                        android:text="Task End Time"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/App_TextViewSmall"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:text="EID *"
                        android:textColor="@color/colorBlue" />

                    <TextView
                        style="@style/App_TextViewSmall"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:text="Store Name *"
                        android:textColor="@color/colorBlue" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etEnboltId"
                        style="@style/App_EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="10"
                        android:nextFocusDown="@+id/etShopHouseNo"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_10sdp" />

                    <EditText

                        android:id="@+id/etStoreName"
                        style="@style/App_EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_weight="1"
                        android:editable="false"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:enabled="false"
                        android:nextFocusDown="@+id/etShopHouseNo"
                        android:singleLine="true"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

                <TextView
                    style="@style/App_TextViewSmall"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/montesemibold"
                    android:text="Attachment"
                    android:textColor="@color/colorBlack" />

                <LinearLayout
                    android:layout_width="@dimen/_105sdp"
                    android:layout_height="@dimen/_105sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/dotted_bg"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivTaskImage"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_105sdp"
                        app:srcCompat="@drawable/ic_add_img" />

                </LinearLayout>


                <TextView
                    style="@style/App_TextViewSmall"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/robotoitalic"
                    android:text="@string/you_can_find_b_eid_from_kirana_s_profile_screen"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <TextView
            android:id="@+id/tvSubmnit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/montserratsemibold"
            android:gravity="center"
            android:text="SUBMIT"
            android:textColor="@color/whitePrimary"
            android:textSize="@dimen/_15sdp" />
    </RelativeLayout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rvCaptured"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:visibility="gone">


        <RelativeLayout
            android:id="@+id/rlWithMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/flImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />
            </FrameLayout>

            <TextView
                android:id="@+id/tverror"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:gravity="center"
                android:text="Select area to show error..."
                android:textColor="#ffffff"
                android:visibility="visible" />

            <com.canvascoders.opaper.Screenshot.DragRectView
                android:id="@+id/dragRect"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/llButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btSelect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/_15sdp"
                    android:text="Select" />

                <Button
                    android:id="@+id/btClose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/_15sdp"
                    android:text="Cancel" />
            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>
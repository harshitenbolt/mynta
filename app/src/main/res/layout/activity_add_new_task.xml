<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AddNewTaskActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montesemibold"
            android:gravity="center"
            android:paddingRight="@dimen/_45sdp"
            android:text="Add Task"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_14sdp" />

        <ImageView
            android:id="@+id/ivSupport"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/support" />

    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <!-- **** Place Your Content Here **** -->

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_3sdp"
            android:background="@drawable/toolbarshadow" />

    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="vertical">

            <TextView
                style="@style/App_TextViewSmall"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Task Type"
                android:textColor="@color/colorBlue" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/etfieldbackgroundgrey">

                <Spinner
                    android:id="@+id/spReasons"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"

                    android:paddingLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp" />
            </RelativeLayout>


            <TextView
                style="@style/App_TextViewSmall"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Task Details"
                android:textColor="@color/colorBlue" />

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/etfieldbackgroundgrey"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:lines="2"
                android:nextFocusDown="@+id/etShopHouseNo"
                android:paddingLeft="@dimen/_5sdp"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp" />

            <TextView
                style="@style/App_TextViewSmall"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Start Time"
                android:textColor="@color/colorBlue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPeakDate"
                    style="@style/App_EditTextStyle"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:fontFamily="@font/monteregular"
                    android:gravity="center_vertical"
                    android:imeOptions="actionNext"
                    android:inputType="none"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="Task Start Date"
                    android:textSize="@dimen/_10sdp" />


                <TextView
                    android:id="@+id/tvPeakHoursStart"
                    style="@style/App_EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:fontFamily="@font/monteregular"
                    android:gravity="center_vertical"
                    android:imeOptions="actionNext"
                    android:inputType="none"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="Task Start Time"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

            <TextView
                style="@style/App_TextViewSmall"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="End Time"
                android:textColor="@color/colorBlue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvEndTaskDate"
                    style="@style/App_EditTextStyle"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:fontFamily="@font/monteregular"
                    android:gravity="center_vertical"
                    android:imeOptions="actionNext"
                    android:inputType="none"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="Task End Date"
                    android:textSize="@dimen/_10sdp" />


                <TextView
                    android:id="@+id/tvEndTaskHour"
                    style="@style/App_EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:fontFamily="@font/monteregular"
                    android:gravity="center_vertical"
                    android:imeOptions="actionNext"
                    android:inputType="none"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="Task End Time"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>


            <TextView
                style="@style/App_TextViewSmall"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/montesemibold"
                android:text="Task Image"
                android:textColor="@color/colorBlack" />

            <LinearLayout
                android:layout_width="@dimen/_105sdp"
                android:layout_height="@dimen/_105sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/dotted_bg"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ivTaskImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_105sdp"
                    app:srcCompat="@drawable/ic_add_img"
                    />

            </LinearLayout>



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/tvSubmnit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/montserratsemibold"
        android:gravity="center"
        android:text="SUBMIT"
        android:textColor="@color/whitePrimary"
        android:textSize="@dimen/_15sdp" />
</LinearLayout>
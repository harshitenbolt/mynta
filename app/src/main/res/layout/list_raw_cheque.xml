<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_10dp"

    app:cardMaxElevation="5dp">

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_cheque"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/icn_bank" />

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/llLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="3"
            android:layout_toRightOf="@+id/img_cheque"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/rb_medium"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="Name" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvBank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/rb_medium"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="Bank" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/rb_medium"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="Account" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/rb_medium"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="Status" />
        </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/linear_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_toRightOf="@+id/img_cheque"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvPayeeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/rb_medium"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="ABC Store" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvBankName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/rb_light"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="State Bank of India" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvAccountNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/rb_light"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="12345" />


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvStauts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:checked="true"
                android:fontFamily="@font/rb_bold"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="Disabled" />
        </android.support.v7.widget.LinearLayoutCompat>


    </LinearLayout>

</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_10dp"
    android:background="@drawable/roundedcornergreythick"
    android:paddingTop="@dimen/_5sdp"
    android:paddingBottom="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardMaxElevation="@dimen/_5sdp">

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_cheque"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/icn_bank"
            android:visibility="gone" />

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/llLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_cheque"
            android:layout_weight="3"
            android:orientation="vertical"
            android:visibility="gone">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/rb_medium"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="Name" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvBank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/rb_medium"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="Bank" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/rb_medium"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="Account" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/rb_medium"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="Status" />
        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:clipToPadding="true"
            android:elevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_5sdp">

            <ImageView
                android:id="@+id/ivGSTImage"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                android:scaleType="fitCenter" />
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/linear_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_toRightOf="@+id/img_cheque"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tvStoreName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/rb_medium"
                    android:gravity="center|left"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="@dimen/_13sdp"
                    app:fontFamily="@font/montesemibold" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tvStauts"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/rounded_circle_bordercolor_green"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="ACTIVE"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_7sdp"
                    android:visibility="gone" />
            </LinearLayout>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/rb_light"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="GST number &amp; Status"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/_8sdp"
                android:visibility="visible"
                app:fontFamily="@font/monteregular" />


            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tvGSTNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/monteregular"
                    android:gravity="center|left"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="@dimen/_8sdp"
                    app:fontFamily="@font/monteregular" />


                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:checked="true"
                    android:fontFamily="@font/monteregular"
                    android:gravity="center|left"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="@dimen/_8sdp"
                    android:visibility="visible" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_1sdp"
                android:fontFamily="@font/monteregular"
                android:text=""
                android:textColor="@color/colorRed"
                android:textSize="@dimen/_8sdp">

            </TextView>

        </android.support.v7.widget.LinearLayoutCompat>


    </LinearLayout>

</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey"
    android:orientation="vertical"
    tools:context=".activity.VendorDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
            android:id="@+id/iv_back_process"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/back" />

        <TextView

            android:id="@+id/tvStoreName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montesemibold"
            android:gravity="center"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_45sdp"
            android:singleLine="true"
            android:text="Task Details"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_14sdp" />

        <ImageView
            android:id="@+id/ivSupport"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/support"
            android:visibility="gone" />
    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:id="@+id/llAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"

        android:background="@color/whitePrimary"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_marginLeft="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:src="@drawable/placeholder2" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:fontFamily="@font/monteregular"
            android:text=""
            android:textSize="@dimen/_8sdp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/flShadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llAddress">

        <!-- **** Place Your Content Here **** -->

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_3sdp"
            android:background="@drawable/toolbarshadow" />

    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nvMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/flShadow"
        android:layout_marginBottom="@dimen/_40sdp">

        <RelativeLayout
            android:id="@+id/rvMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_195sdp" />

            <TextView
                android:id="@+id/tvLocate"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_130sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/rounded_corner_view_blue_more"
                android:fontFamily="@font/montebold"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="NAVIGATE ME"
                android:textColor="@color/whitePrimary"
                android:textSize="@dimen/_8sdp" />


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_160sdp"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <androidx.cardview.widget.CardView
                        style="@style/CustomCardView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clipToPadding="true"
                        android:elevation="@dimen/_5sdp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tvTaskID"
                                            android:layout_width="@dimen/_75sdp"
                                            android:layout_height="@dimen/_25sdp"
                                            android:layout_gravity="start"
                                            android:layout_marginTop="@dimen/_20sdp"
                                            android:background="@drawable/rounded_corner_view_grey_more"
                                            android:gravity="center"
                                            android:text="# 1234"
                                            android:textColor="@color/text_color_dark_grey" />

                                        <LinearLayout
                                            android:id="@+id/llTimer"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/tvTimer"
                                                android:layout_width="fill_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginRight="@dimen/_5sdp"
                                                android:fontFamily="@font/montesemibold"
                                                android:gravity="end"
                                                android:text=""
                                                android:textColor="@color/colorPrimary"
                                                android:textSize="@dimen/_25sdp" />
                                        </LinearLayout>
                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/tv_title_Process"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_15sdp"
                                        android:fontFamily="@font/montebold"
                                        android:text="Task Name Title"
                                        android:textColor="@color/colorBlue"
                                        android:textSize="@dimen/_12sdp" />

                                    <TextView
                                        android:id="@+id/tvDescription"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_2sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_marginRight="@dimen/_2sdp"
                                        android:layout_weight="1"
                                        android:text=""
                                        android:textColor="@color/darkGrey" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">


                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_1sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:background="@color/colorLightGrey" />


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/_15sdp"
                                        android:orientation="vertical">


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_20sdp"
                                            android:orientation="horizontal">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:orientation="horizontal">

                                                <ImageView
                                                    android:layout_width="@dimen/_13sdp"
                                                    android:layout_height="@dimen/_13sdp"
                                                    android:layout_gravity="bottom"
                                                    android:src="@drawable/manuser" />


                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center_vertical"
                                                    android:layout_marginLeft="@dimen/_2sdp"
                                                    android:orientation="vertical">

                                                    <TextView
                                                        style="@style/TextviewwithoutSize"
                                                        android:fontFamily="@font/monteregular"
                                                        android:text="Assigned By"

                                                        android:textSize="@dimen/_8sdp" />

                                                    <TextView
                                                        android:id="@+id/tvAssignedBy"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginTop="@dimen/_2sdp"
                                                        android:editable="false"
                                                        android:enabled="false"
                                                        android:fontFamily="@font/monteregular"
                                                        android:text=""
                                                        android:textAllCaps="false"
                                                        android:textSize="@dimen/_9sdp" />

                                                </LinearLayout>

                                            </LinearLayout>

                                            <LinearLayout
                                                android:id="@+id/llCall"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="@dimen/_3sdp"
                                                android:layout_weight="1"
                                                android:clickable="true"
                                                android:duplicateParentState="true"
                                                android:focusable="true">

                                                <ImageView
                                                    android:layout_width="@dimen/_13sdp"
                                                    android:layout_height="@dimen/_13sdp"
                                                    android:layout_gravity="bottom"
                                                    android:src="@drawable/telephone" />

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="top"
                                                    android:layout_marginLeft="@dimen/_3sdp"
                                                    android:layout_weight="1.2"
                                                    android:orientation="vertical">


                                                    <TextView
                                                        style="@style/TextviewwithoutSize"
                                                        android:fontFamily="@font/monteregular"
                                                        android:text="Make a call"
                                                        android:textSize="@dimen/_8sdp" />

                                                    <TextView
                                                        android:id="@+id/tvMobileNo"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginTop="@dimen/_2sdp"

                                                        android:fontFamily="@font/monteregular"
                                                        android:text=""
                                                        android:textColor="@color/colorBlue"
                                                        android:textSize="@dimen/_9sdp" />
                                                </LinearLayout>
                                            </LinearLayout>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_20sdp"
                                            android:orientation="horizontal">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1">

                                                <ImageView
                                                    android:layout_width="@dimen/_13sdp"
                                                    android:layout_height="@dimen/_13sdp"
                                                    android:layout_gravity="bottom"
                                                    android:src="@drawable/calendar" />


                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center_vertical"
                                                    android:layout_marginLeft="@dimen/_3sdp"
                                                    android:layout_weight="1"
                                                    android:orientation="vertical">

                                                    <TextView
                                                        style="@style/TextviewwithoutSize"
                                                        android:fontFamily="@font/monteregular"
                                                        android:text="Assigned Time"
                                                        android:textSize="@dimen/_8sdp" />

                                                    <TextView
                                                        android:id="@+id/tvAssignedTime"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginTop="@dimen/_2sdp"
                                                        android:fontFamily="@font/monteregular"
                                                        android:text=""
                                                        android:textAllCaps="false"
                                                        android:textSize="@dimen/_9sdp" />

                                                </LinearLayout>
                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1">

                                                <ImageView
                                                    android:layout_width="@dimen/_13sdp"
                                                    android:layout_height="@dimen/_13sdp"
                                                    android:layout_gravity="bottom"
                                                    android:src="@drawable/calendar" />


                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="top"
                                                    android:layout_marginLeft="@dimen/_3sdp"
                                                    android:layout_weight="1.2"
                                                    android:orientation="vertical">


                                                    <TextView
                                                        android:id="@+id/tvTitleDueDate"
                                                        style="@style/TextviewwithoutSize"
                                                        android:fontFamily="@font/monteregular"
                                                        android:text="Deadline Time"
                                                        android:textSize="@dimen/_8sdp" />

                                                    <TextView
                                                        android:id="@+id/tvDueDate"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginTop="@dimen/_2sdp"
                                                        android:enabled="false"
                                                        android:fontFamily="@font/monteregular"
                                                        android:text=""
                                                        android:textSize="@dimen/_9sdp" />

                                                </LinearLayout>
                                            </LinearLayout>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/llComplete"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_20sdp"
                                            android:orientation="horizontal"
                                            android:visibility="gone">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1">

                                                <ImageView
                                                    android:layout_width="@dimen/_13sdp"
                                                    android:layout_height="@dimen/_13sdp"
                                                    android:layout_gravity="bottom"
                                                    android:src="@drawable/calendar" />


                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center_vertical"
                                                    android:layout_marginLeft="@dimen/_3sdp"
                                                    android:layout_weight="1"
                                                    android:orientation="vertical">

                                                    <TextView
                                                        style="@style/TextviewwithoutSize"
                                                        android:fontFamily="@font/monteregular"
                                                        android:text="Completed Time"
                                                        android:textSize="@dimen/_8sdp" />

                                                    <TextView
                                                        android:id="@+id/tvTaskTime"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginTop="@dimen/_2sdp"
                                                        android:fontFamily="@font/monteregular"
                                                        android:text=""
                                                        android:textAllCaps="false"
                                                        android:textSize="@dimen/_9sdp" />

                                                </LinearLayout>
                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1">

                                                <ImageView
                                                    android:layout_width="@dimen/_13sdp"
                                                    android:layout_height="@dimen/_13sdp"
                                                    android:layout_gravity="bottom"
                                                    android:src="@drawable/calendar" />


                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="top"
                                                    android:layout_marginLeft="@dimen/_3sdp"
                                                    android:layout_weight="1.2"
                                                    android:orientation="vertical">


                                                    <TextView
                                                        style="@style/TextviewwithoutSize"
                                                        android:fontFamily="@font/monteregular"
                                                        android:text="Task Duration"
                                                        android:textSize="@dimen/_8sdp" />

                                                    <TextView
                                                        android:id="@+id/tvTaskCompletedDuration"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginTop="@dimen/_2sdp"
                                                        android:enabled="false"
                                                        android:fontFamily="@font/monteregular"
                                                        android:text=""
                                                        android:textSize="@dimen/_9sdp" />

                                                </LinearLayout>
                                            </LinearLayout>
                                        </LinearLayout>


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_10sdp"
                                            android:orientation="horizontal">


                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical"
                                                android:layout_weight="1"
                                                android:orientation="vertical">


                                                <TextView
                                                    android:id="@+id/tvDuration"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/monteregular"
                                                    android:text=""
                                                    android:textAllCaps="false"
                                                    android:textSize="@dimen/_11sdp" />

                                            </LinearLayout>


                                        </LinearLayout>

                                    </LinearLayout>
                                </LinearLayout>


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_65sdp"
                                    android:layout_weight="1"
                                    android:gravity="center">


                                    <LinearLayout

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:orientation="horizontal"
                                        android:visibility="gone">


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_weight="1"
                                            android:orientation="vertical">

                                            <TextView
                                                style="@style/TextviewwithoutSize"
                                                android:fontFamily="@font/montesemibold"
                                                android:text="Completion Duration"
                                                android:textSize="@dimen/_10sdp" />


                                        </LinearLayout>


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="top"
                                            android:layout_marginLeft="@dimen/_3sdp"
                                            android:layout_weight="1.2"
                                            android:orientation="vertical">


                                            <TextView
                                                style="@style/TextviewwithoutSize"
                                                android:fontFamily="@font/montesemibold"
                                                android:text="Completion Time"
                                                android:textSize="@dimen/_10sdp" />


                                        </LinearLayout>
                                    </LinearLayout>


                                </RelativeLayout>


                                <!-- <LinearLayout

                                     android:layout_width="match_parent"
                                     android:layout_height="wrap_content"
                                     android:layout_marginTop="@dimen/_10sdp"
                                     android:visibility="gone">

                                     <Button
                                         style="@style/Button_withGreen"
                                         android:layout_weight="1"
                                         android:background="@color/colorBlue"
                                         android:text="UPDATE CHEQUE DETAILS"
                                         android:textSize="@dimen/_8sdp" />

                                     <Button

                                         style="@style/Button_withGreen"
                                         android:layout_weight="1"
                                         android:background="@color/colorPrimary"
                                         android:text="CHANGE RATE/ADD STORE TYPE"
                                         android:textSize="@dimen/_8sdp" />
                                 </LinearLayout>-->

                            </LinearLayout>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rvCaptured"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:visibility="gone">


        <RelativeLayout
            android:id="@+id/rlWithMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/flImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />
            </FrameLayout>

            <TextView
                android:id="@+id/tverror"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:gravity="center"
                android:text="Select area to show error..."
                android:textColor="#ffffff"
                android:visibility="visible" />

            <com.canvascoders.opaper.Screenshot.DragRectView
                android:id="@+id/dragRect"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/llButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/ivSelect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/_15sdp"
                    android:text="Select" />

                <Button
                    android:id="@+id/ivClose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/_15sdp"
                    android:text="Cancel" />
            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btPauseTask"
            style="@style/Button_withYello"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_weight="1"
            android:text="Pause Task"
            android:visibility="gone" />

        <Button
            android:id="@+id/btStartTask"
            style="@style/Button_withGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_weight="1"
            android:text="Start Task"
            android:visibility="visible" />
    </LinearLayout>


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/linear_menu_profile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:background="@color/whitePrimary"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_5sdp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">


        <TextView
            style="@style/App_TextViewSmall"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_weight="4"
            android:gravity="end|bottom"
            android:text="@string/version_23"
            android:textColor="@color/mediumGrey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_65sdp"
                android:background="@drawable/backgroundshapecircle"
                android:padding="10dp"
                android:visibility="visible"
                app:srcCompat="@drawable/photo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvHeaderName"
                    style="@style/TextviewwithoutSize"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/montebold"
                    android:gravity="bottom"
                    android:text=""
                    android:textColor="@color/darkGrey"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/tvHeaderEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/monteregular"
                    android:gravity="top"
                    android:lines="2"
                    android:text=""
                    android:textColor="@color/mediumGrey"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="end">

            <ImageView
                android:id="@+id/ivHome"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="end"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:fontFamily="@font/monteregular"
                android:src="@drawable/home"
                android:visibility="visible" />

            <ImageView

                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="end"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:fontFamily="@font/monteregular"
                android:src="@drawable/setting"
                android:visibility="visible" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/colorBlue"></View>
</LinearLayout>
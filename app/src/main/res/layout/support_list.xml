<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_10dp"
    app:cardMaxElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/_10sdp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvMain1"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:adjustViewBounds="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/roundedcornergreythick"
            android:scaleType="fitCenter">

            <ImageView
                android:id="@+id/ivAttachment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_toRightOf="@+id/cvMain1"
            android:background="#ffffff"
            android:orientation="vertical"
            android:padding="2dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextviewwithoutSize"
                        android:fontFamily="@font/montesemibold"
                        android:text="Ticket No."
                        android:clickable="false"
                        android:textColor="@color/colorBlue"
                        android:textSize="@dimen/_8sdp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvTicketNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/rb_light"
                        android:text=""
                        android:clickable="false"
                        android:textSize="@dimen/_15sdp"
                        app:fontFamily="@font/montesemibold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextviewwithoutSize"
                        android:fontFamily="@font/montesemibold"
                        android:text="Priority"
                        android:clickable="false"
                        android:layout_gravity="start"
                        android:textColor="@color/colorBlue"
                        android:textSize="@dimen/_8sdp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvPriority"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:layout_gravity="start"
                        android:fontFamily="@font/monteregular"
                        android:text=""
                        />


                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextviewwithoutSize"
                        android:fontFamily="@font/montesemibold"
                        android:text="Subject"
                        android:clickable="false"
                        android:textColor="@color/colorBlue"
                        android:textSize="@dimen/_8sdp" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvSubject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:clickable="false"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:lines="2"
                        app:fontFamily="@font/monteregular" />
                </LinearLayout>

                <Button
                    android:id="@+id/tvStatus"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/_25sdp"
                    android:layout_gravity="end"
                    android:clickable="false"
                    android:background="@drawable/rounded_circle_bordercolor_green"
                    android:fontFamily="@font/montesemibold"
                    android:gravity="center"
                    android:text=""
                    android:textSize="@dimen/_7sdp" />
            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp"
                android:visibility="gone"
                android:weightSum="1">


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.40"
                    android:fontFamily="@font/rb_light"
                    android:text="Amount" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.60"
                    android:fontFamily="@font/rb_light" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp"
                android:visibility="gone"
                android:weightSum="1">


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.40"
                    android:fontFamily="@font/rb_light"
                    android:text="Bill Period" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.60"
                    android:fontFamily="@font/rb_light" />
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
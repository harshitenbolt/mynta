<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CustomCardView"
    android:layout_width="match_parent"
    android:background="@color/whitePrimary"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/whitePrimary"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lineardata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerInParent="true"
                      android:layout_marginTop="@dimen/_15sdp"
                      android:fontFamily="@font/montesemibold"
                      android:gravity="center"
                      android:textColor="@color/colorBlack"
                      android:text="Select Store Type" />-->

                <ImageView
                    android:id="@+id/ivClose"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:padding="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:src="@drawable/close" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/lightGrey" />

            <LinearLayout
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:orientation="vertical"

                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/etAdharName"
                    style="@style/App_EditTextStyle"

                    android:layout_width="match_parent"
                    android:hint="Name"
                    />

                <EditText
                    android:id="@+id/etYearofBirth"
                    style="@style/App_EditTextStyle"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:hint="Year of Birth"
                    />

                <EditText
                    android:id="@+id/etPincode"
                    style="@style/App_EditTextStyle"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:hint="Pincode"
                    />

                <EditText
                    android:id="@+id/etAdharNumber"
                    style="@style/App_EditTextStyle"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:hint="AADHAR Number"
                    />
            </LinearLayout>

        </LinearLayout>
        <Button
            android:layout_below="@+id/lineardata"
            android:text="Submit"
            android:id="@+id/btSubmitAdharDet"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/rounded_corner_view_green"
            style="@style/Button_withGreen" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>

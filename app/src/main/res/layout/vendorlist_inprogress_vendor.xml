<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvStoreImage"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                app:cardCornerRadius="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/ivStoreImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linear_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toRightOf="@+id/cvStoreImage"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:src="@drawable/shop" />

                    <TextView
                        android:id="@+id/tvStoreName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:fontFamily="@font/montesemibold"
                        android:gravity="center|left"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/colorBlue"
                        android:textSize="@dimen/_8sdp" />

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_17sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_weight="1.5"
                        android:background="@drawable/rounded_cornergreen"
                        android:fontFamily="@font/montesemibold"
                        android:gravity="center"
                        android:text="RESUME"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_8sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:src="@drawable/manager" />

                    <TextView
                        android:id="@+id/tvName"
                        style="@style/TextviewwithoutSize"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:clickable="false"
                        android:fontFamily="@font/montesemibold"
                        android:text=""
                        android:textSize="@dimen/_8sdp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp">

                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:src="@drawable/telephone" />

                        <TextView
                            android:id="@+id/tvMobile"
                            style="@style/TextviewwithoutSize"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:text=""
                            android:textSize="@dimen/_8sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Live from"
                            android:textColor="@color/text_color_dark_grey"
                            android:textSize="@dimen/_7sdp" />

                        <TextView
                            android:id="@+id/tvLiveFrom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:drawableLeft="@drawable/calendar"
                            android:drawablePadding="@dimen/_5sdp"
                            android:text="30-12-2018" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/placeholder2" />

                    <TextView
                        android:id="@+id/tvRoute"
                        style="@style/TextviewwithoutSize"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:lines="2"
                        android:maxLines="2"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_5sdp"
                        android:layout_height="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:background="@drawable/rounded_corner_view_blue" />

                    <TextView
                        android:id="@+id/tvStatuswhileBoarding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:fontFamily="@font/montesemibold"
                        android:text=""
                        android:textColor="@color/text_color_dark_grey"
                        android:textSize="@dimen/_8sdp" />

                </LinearLayout>


            </androidx.appcompat.widget.LinearLayoutCompat>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/colorLightGrey" />
    </LinearLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linear_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_view_vendor"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/txt_status"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_phone_number2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/cell"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/rb_light"
                    android:gravity="center|left"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:text="+91 9426278087" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:checked="true"
                    android:drawableLeft="@drawable/ic_fiber_manual_record_black_24dp"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/rb_bold"
                    android:gravity="center|left"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:text="abc" />
            </LinearLayout>


        </RelativeLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</LinearLayout>

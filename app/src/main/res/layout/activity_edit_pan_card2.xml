<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".activity.EditPanCardActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tv_title_Process"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montesemibold"
            android:gravity="center"
            android:paddingRight="@dimen/_45sdp"
            android:text="Update PAN Details"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_14sdp" />

    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <!-- **** Place Your Content Here **** -->

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_3sdp"
            android:background="@drawable/toolbarshadow" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/rvmain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ScrollView
                android:id="@+id/scMain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/btSubmit"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_15sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextviewwithoutSize"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:fontFamily="@font/montesemibold"
                            android:text="Past PAN Details"
                            android:textColor="@color/colorBlack" />

                        <androidx.cardview.widget.CardView
                            style="@style/CustomCardView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_10sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_marginBottom="@dimen/_15sdp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_70sdp"
                                    android:layout_gravity="center"
                                    android:layout_weight="2.2"
                                    android:gravity="center">

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/cvStoreImage"
                                        android:layout_width="@dimen/_60sdp"
                                        android:layout_height="@dimen/_60sdp"
                                        android:layout_gravity="center"
                                        app:cardCornerRadius="@dimen/_5sdp">

                                        <ImageView
                                            android:id="@+id/ivStoreImage"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/image_placeholder" />
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2"
                                    android:orientation="vertical"
                                    android:paddingTop="@dimen/_5sdp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montesemibold"
                                        android:text="Name"
                                        android:textColor="@color/colorBlue"
                                        android:textSize="@dimen/_7sdp" />

                                    <TextView
                                        android:id="@+id/tvPanName"
                                        style="@style/TextviewwithoutSize"
                                        android:layout_gravity="start"
                                        android:layout_marginTop="@dimen/_3sdp"
                                        android:fontFamily="@font/montesemibold"
                                        android:gravity="start"
                                        android:singleLine="true"
                                        android:text=""
                                        android:textSize="@dimen/_7sdp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:fontFamily="@font/montesemibold"
                                        android:text="Father Name"

                                        android:textColor="@color/colorBlue"
                                        android:textSize="@dimen/_7sdp" />

                                    <TextView
                                        android:id="@+id/tvPanFatherName"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_3sdp"
                                        android:fontFamily="@font/montesemibold"
                                        android:singleLine="true"
                                        android:text=""
                                        android:textSize="@dimen/_7sdp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_weight="2.2"
                                    android:orientation="vertical"
                                    android:paddingTop="@dimen/_5sdp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montesemibold"
                                        android:text="PAN Id"
                                        android:textColor="@color/colorBlue"
                                        android:textSize="@dimen/_7sdp" />

                                    <TextView
                                        android:id="@+id/tvPanNo"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_3sdp"
                                        android:fontFamily="@font/montesemibold"
                                        android:text=""
                                        android:textSize="@dimen/_7sdp" />

                                </LinearLayout>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            style="@style/CustomCardView"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:clipToPadding="true">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"

                                android:padding="@dimen/_15sdp">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:paddingBottom="@dimen/_10sdp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montesemibold"
                                        android:text="If you want's to update PAN details,Please upload below"
                                        android:textColor="@color/text_color_dark_grey"

                                        android:textSize="@dimen/_10sdp" />

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="@dimen/_15sdp"
                                        android:layout_weight="5"
                                        android:orientation="horizontal">

                                        <TextView
                                            style="@style/TextviewwithoutSize"
                                            android:layout_width="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:fontFamily="@font/montesemibold"
                                            android:gravity="center"
                                            android:singleLine="true"
                                            android:text="PAN CARD IMAGE"
                                            android:textColor="@color/colorBlue"
                                            android:textSize="@dimen/_8sdp" />


                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">>

                                            <TextView
                                                android:id="@+id/ivPanCard"
                                                style="@style/App_TextViewSmall"
                                                android:layout_width="wrap_content"
                                                android:layout_alignParentEnd="true"
                                                android:layout_centerVertical="true"
                                                android:background="@drawable/rounded_corner_view_blue"
                                                android:focusable="false"
                                                android:fontFamily="@font/montebold"
                                                android:gravity="center"
                                                android:padding="@dimen/_4sdp"
                                                android:text="CLICK HERE"
                                                android:textColor="@color/whitePrimary"
                                                android:textSize="@dimen/_6sdp" />

                                            <ImageView
                                                android:id="@+id/tvClickPanSelected"
                                                android:layout_width="@dimen/_15sdp"
                                                android:layout_height="@dimen/_15sdp"
                                                android:layout_alignParentEnd="true"
                                                android:layout_centerVertical="true"
                                                android:focusable="false"
                                                android:src="@drawable/bluecheck"
                                                android:visibility="gone" />

                                        </RelativeLayout>

                                    </RelativeLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_150sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_marginBottom="@dimen/_20sdp"
                                        android:layout_weight="1"
                                        android:background="@drawable/roundedcornergrey">

                                        <ImageView
                                            android:id="@+id/ivPanImage"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_margin="@dimen/_10sdp"
                                            android:scaleType="centerInside"
                                            android:src="@drawable/pancard" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/llGonext"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_20dp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_marginRight="@dimen/margin_20dp"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:visibility="gone">

                                    <TextView
                                        android:id="@+id/btGoBack"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_weight="0.8"
                                        android:fontFamily="@font/montesemibold"
                                        android:gravity="end|center_vertical"
                                        android:text="Don't want to change ?"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/_8sdp"
                                        android:visibility="visible" />

                                    <TextView
                                        android:id="@+id/tvGoBack"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="start"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/rb_medium"
                                        android:gravity="start"
                                        android:paddingLeft="@dimen/_3sdp"
                                        android:text="Click Here"
                                        android:textColor="@color/colorRed"
                                        android:textSize="@dimen/_10sdp"
                                        android:textStyle="bold"
                                        android:visibility="visible" />
                                </LinearLayout>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        style="@style/CustomCardView"
                        android:visibility="gone"
                        android:id="@+id/cvGstDetails"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp">


                           <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:orientation="vertical">

                               <LinearLayout
                                android:id="@+id/llOwnerInfo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="visible">

                                   <TextView
                                       android:layout_marginTop="@dimen/_10sdp"
                                       android:layout_width="match_parent"
                                       android:id="@+id/tvTextMessage"
                                       android:layout_marginLeft="@dimen/_5sdp"
                                       android:layout_marginRight="@dimen/_5sdp"
                                       android:layout_marginBottom="@dimen/_5sdp"
                                       android:fontFamily="@font/montserratsemibold"
                                       android:textSize="@dimen/_10sdp"
                                       android:layout_height="wrap_content" />



                                   <TextView
                                    style="@style/App_TextViewSmall"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:text="GST Number"
                                    android:textColor="@color/colorBlue" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:background="@drawable/etfieldbackgroundgrey"
                                    android:orientation="vertical">

                                    <EditText
                                        android:id="@+id/etGstNumber"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/etfieldbackgroundgrey"
                                        android:imeOptions="actionNext"
                                        android:inputType="textCapCharacters"
                                        android:nextFocusDown="@+id/etShopHouseNo"
                                        android:paddingLeft="@dimen/_10sdp"
                                        android:textAllCaps="true"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/_10sdp" />


                                    <ImageView
                                        android:id="@+id/ivEdit"
                                        android:layout_width="@dimen/_35sdp"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentRight="true"
                                        android:background="@drawable/rounded_corner_view_blue"
                                        android:padding="@dimen/_5sdp"
                                        android:visibility="gone"
                                        app:srcCompat="@drawable/pencil" />

                                    <ImageView
                                        android:id="@+id/ivSearch"
                                        android:layout_width="@dimen/_35sdp"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentRight="true"
                                        android:background="@drawable/rounded_corner_view_blue"
                                        android:padding="@dimen/_5sdp"
                                        android:visibility="visible"
                                        app:srcCompat="@drawable/search" />
                                </RelativeLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:layout_marginTop="@dimen/_20sdp"
                                    android:background="@color/mediumLightGrey" />



                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/montesemibold"
                                        android:text="GST Certificate"
                                        android:textColor="@color/colorBlue"
                                        android:textSize="@dimen/_11sdp" />

                                    <ImageView
                                        android:id="@+id/ivGSTImageSelected"
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:layout_gravity="end"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:src="@drawable/bluecheck"
                                        android:visibility="gone" />
                                </LinearLayout>


                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_110sdp"
                                    android:layout_height="@dimen/_110sdp"
                                    android:layout_marginLeft="@dimen/_2sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_marginRight="@dimen/_2sdp"
                                    android:layout_marginBottom="@dimen/_2sdp"
                                    android:background="@drawable/roundedcornergreythick"
                                    android:elevation="@dimen/_5sdp"
                                    app:cardCornerRadius="@dimen/_5sdp">


                                    <ImageView
                                        android:id="@+id/ivGSTImage"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/ic_add_img"
                                        android:scaleType="centerCrop" />

                                </androidx.cardview.widget.CardView>


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:fontFamily="@font/montesemibold"
                                    android:text="Store Information"
                                    android:textColor="@color/colorBlue"
                                    android:textSize="@dimen/_10sdp" />


                                <TextView
                                    style="@style/App_TextViewSmall"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:fontFamily="@font/montesemibold"
                                    android:text="Store Name"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/_10sdp" />


                                <EditText
                                    android:id="@+id/etStoreName"
                                    style="@style/App_EditTextStyle"
                                    android:layout_width="match_parent"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@drawable/dotted_bg"
                                    android:editable="false"
                                    android:enabled="false"
                                    android:inputType="text"
                                    android:nextFocusDown="@+id/etOwnerName"
                                    android:padding="@dimen/_10sdp"
                                    android:textColor="@color/colorGrey"
                                    android:textSize="@dimen/_10sdp" />


                                <TextView
                                    style="@style/App_TextViewSmall"
                                    android:layout_marginTop="@dimen/_15sdp"
                                    android:fontFamily="@font/montesemibold"
                                    android:text="Store Address"
                                    android:textColor="@color/colorBlack" />

                                <EditText
                                    android:id="@+id/etAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_90sdp"
                                    android:layout_gravity="top"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_35sdp"
                                    android:background="@drawable/dotted_bg"
                                    android:editable="false"
                                    android:enabled="false"
                                    android:gravity="top"
                                    android:inputType="text|textMultiLine"
                                    android:maxLines="4"
                                    android:padding="@dimen/_10sdp"
                                    android:singleLine="false"
                                    android:textColor="@color/colorGrey"
                                    android:textSize="@dimen/_10sdp" />


                            </LinearLayout>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </ScrollView>

            <Button
                android:id="@+id/btSubmit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/colorYellow"
                android:fontFamily="@font/montesemibold"
                android:text="Update PAN Details"
                android:textAllCaps="true"
                android:textColor="@color/whitePrimary"
                android:textSize="@dimen/_12sdp" />


        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey"
    android:clickable="true"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->


    <androidx.cardview.widget.CardView
        style="@style/CustomCardView"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"

                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvBack"
                            style="@style/App_TextViewSmall"
                            android:layout_width="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/rounded_corner_view_blue"
                            android:focusable="false"
                            android:fontFamily="@font/montebold"
                            android:gravity="center"
                            android:padding="@dimen/_4sdp"
                            android:text="Back"
                            android:visibility="gone"
                            android:textColor="@color/whitePrimary"
                            android:textSize="@dimen/_6sdp" />


                        <TextView
                            style="@style/TextviewwithoutSize"
                            android:layout_width="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/montesemibold"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="CANCELLED CHEQUE"
                            android:textColor="@color/colorBlue"
                            android:textSize="@dimen/_8sdp" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">>

                            <TextView
                                android:id="@+id/tvClickCheque"
                                style="@style/App_TextViewSmall"
                                android:layout_width="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/rounded_corner_view_blue"
                                android:focusable="false"
                                android:fontFamily="@font/montebold"
                                android:gravity="center"
                                android:padding="@dimen/_4sdp"
                                android:text="CLICK HERE"
                                android:textColor="@color/whitePrimary"
                                android:textSize="@dimen/_6sdp" />

                            <ImageView
                                android:id="@+id/tvClickChequeSelected"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/bluecheck"
                                android:visibility="gone" />

                        </RelativeLayout>


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_150sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:background="@drawable/roundedcornergrey">

                        <ImageView
                            android:id="@+id/ivChequeImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_10sdp"
                            android:scaleType="centerInside"
                            android:src="@drawable/checkimage" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lineardata"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:fontFamily="@font/montesemibold"
                                android:gravity="center"
                                android:text="Bank Account Details"
                                android:textColor="@color/colorBlack" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/lightGrey" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"

                            android:orientation="vertical">

                            <EditText
                                android:clickable="false"
                                android:editable="false"
                                android:enabled="false"
                                android:id="@+id/etAccountNum"
                                style="@style/App_EditTextStyle"
                                android:layout_width="match_parent"
                                android:hint="Account Number"
                                android:inputType="number"
                                android:nextFocusDown="@+id/etPayeeName" />

                            <EditText
                                android:clickable="false"
                                android:editable="false"
                                android:enabled="false"
                                android:id="@+id/etPayeeName"
                                style="@style/App_EditTextStyle"
                                android:layout_width="match_parent"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:hint="Payee Name"
                                android:nextFocusDown="@+id/etIfscCode"
                                android:textAllCaps="true" />

                            <EditText
                                android:clickable="false"
                                android:editable="false"
                                android:enabled="false"
                                android:id="@+id/etIfscCode"
                                style="@style/App_EditTextStyle"
                                android:layout_width="match_parent"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:hint="IFSC code "
                                android:imeOptions="actionDone"
                                android:maxLength="12"
                                android:textAllCaps="true" />

                            <EditText
                                android:id="@+id/etBankName"
                                style="@style/App_EditTextStyle"
                                android:layout_width="match_parent"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:clickable="false"
                                android:editable="false"
                                android:enabled="false"
                                android:hint="Bank Name"
                                android:textAllCaps="true" />

                            <EditText
                                android:id="@+id/etBranchName"
                                style="@style/App_EditTextStyle"
                                android:layout_width="match_parent"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:clickable="false"
                                android:editable="false"
                                android:enabled="false"
                                android:hint="Branch Name"
                                android:textAllCaps="true" />

                            <EditText
                                android:id="@+id/etBankAddress"
                                style="@style/App_EditTextStyle"
                                android:layout_width="match_parent"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:clickable="false"
                                android:editable="false"
                                android:enabled="false"
                                android:hint="Bank Address"
                                android:textAllCaps="true" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_10dp"
                                android:layout_marginBottom="40dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <CheckBox
                                    android:id="@+id/cbAgreeTC"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_10dp"
                                    android:checked="true"
                                    android:padding="5dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/margin_10dp"
                                    android:text="I have verified the above data with physical copy of cheque." />
                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <TextView
                android:id="@+id/txt_show_msg_sucess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:background="#A5D6A7"
                android:gravity="center"
                android:padding="15dp"
                android:text="Sucessfully Done"
                android:textColor="#1E6023"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_show_msg_fail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:background="#FFCDD2"
                android:gravity="center"
                android:padding="15dp"
                android:text="Sucessfully Done"
                android:textColor="#F44336"
                android:visibility="gone" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/btExtract"
        style="@style/Button_withGreen"
        android:text="Extract" />

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <Button
            android:id="@+id/btChangeCheque"
            style="@style/Button_withYello"
            android:layout_weight="1"
            android:text="CHANGE CHEQUE"
            android:textSize="@dimen/_11sdp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btSUbmit"
            style="@style/Button_withGreen"
            android:layout_weight="1"
            android:text="SUBMIT"
            android:visibility="visible" />
    </LinearLayout>


</LinearLayout>
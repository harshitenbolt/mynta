<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            style="@style/CustomCardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clipToPadding="true"
            android:elevation="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingTop="@dimen/_15sdp"
                android:paddingRight="@dimen/_15sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundedcornergreythick">

                    <ImageView
                        android:id="@+id/iv_vendor_image"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/esign" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_15sdp">

                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:src="@drawable/manager" />

                    <TextView
                        style="@style/TextviewwithoutSize"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:drawablePadding="@dimen/_15sdp"
                        android:text="Name"
                        android:fontFamily="@font/montesemibold"
                        android:textSize="@dimen/_8sdp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/App_EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/monteregular"
                    android:textSize="@dimen/_10sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:src="@drawable/telephone" />

                    <TextView
                        style="@style/TextviewwithoutSize"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:drawablePadding="@dimen/_15sdp"
                        android:text="Mobile"
                        android:fontFamily="@font/montesemibold"
                        android:textSize="@dimen/_8sdp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_mobile"
                    style="@style/App_EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:fontFamily="@font/monteregular"
                    android:textSize="@dimen/_10sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:src="@drawable/shop" />

                    <TextView
                        style="@style/TextviewwithoutSize"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:drawablePadding="@dimen/_15sdp"
                        android:fontFamily="@font/montesemibold"
                        android:text="Store Name"

                        android:textSize="@dimen/_8sdp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_shop_name"
                    style="@style/App_EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:fontFamily="@font/monteregular"
                    android:textSize="@dimen/_10sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:src="@drawable/eid" />

                    <TextView
                        style="@style/TextviewwithoutSize"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:drawablePadding="@dimen/_15sdp"
                        android:fontFamily="@font/montesemibold"
                        android:text="EID"

                        android:textSize="@dimen/_8sdp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvProcessId"
                    style="@style/App_EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:fontFamily="@font/monteregular"
                    android:textSize="@dimen/_10sdp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:src="@drawable/placeholder2" />

                    <TextView
                        style="@style/TextviewwithoutSize"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:drawablePadding="@dimen/_15sdp"
                        android:fontFamily="@font/montesemibold"
                        android:text="Address"
                        android:textSize="@dimen/_8sdp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvAddress"
                    style="@style/App_EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:fontFamily="@font/monteregular"
                    android:lines="2"
                    android:maxLines="2"
                    android:textSize="@dimen/_10sdp" />

                <LinearLayout
                    android:id="@+id/linear_cheq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/btUpdatePan"
                        style="@style/TextviewwithoutSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/montesemibold"
                        android:gravity="center"
                        android:text="Change PAN Details"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/tvUpdateMobile"
                        style="@style/TextviewwithoutSize"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/montesemibold"
                        android:gravity="center"
                        android:text="Change Mobile Number"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/btn_resend_agreement"
                        style="@style/TextviewwithoutSize"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/montesemibold"
                        android:gravity="center"
                        android:text="Resend Agreement Link"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"
                        android:visibility="gone" />

                </LinearLayout>


            </LinearLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lledit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_update_cheque"
            style="@style/Button_withGreen"
            android:layout_weight="1"
            android:background="@color/colorBlue"
            android:text="UPDATE CHEQUE DETAILS"
            android:textSize="@dimen/_8sdp" />

        <Button
            android:id="@+id/btn_update_store_details"
            style="@style/Button_withGreen"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="CHANGE RATE/ADD STORE TYPE"
            android:textSize="@dimen/_8sdp" />
    </LinearLayout>
</LinearLayout>

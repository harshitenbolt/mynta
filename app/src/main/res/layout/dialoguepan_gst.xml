<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CustomCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whitePrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whitePrimary">

        <LinearLayout
            android:id="@+id/lineardata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/montesemibold"
                    android:gravity="center"
                    android:text="GST Details"
                    android:textColor="@color/colorBlack" />

                <ImageView
                    android:id="@+id/ivClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/close" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/lightGrey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    style="@style/TextviewwithoutSize"
                    android:fontFamily="@font/montesemibold"
                    android:text="Past GST Details"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/tvGstNo"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:hint=""
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/montesemibold"
                    android:textSize="@dimen/_15sdp"
                    android:inputType="textCapCharacters"
                    android:nextFocusDown="@+id/etFatherName"
                    android:textAllCaps="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montesemibold"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="If you want's to update GST details,Please add below"
                    android:textColor="@color/text_color_dark_grey"

                    android:textSize="@dimen/_10sdp" />

                <EditText
                    android:id="@+id/etGstNumber"
                    style="@style/App_EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="GST Number"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:inputType="textCapCharacters"
                    android:nextFocusDown="@+id/etPanNumber"
                    android:textAllCaps="true" />




            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btSubmitgstDetail"
            style="@style/Button_withGreen"
            android:layout_below="@+id/lineardata"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/rounded_corner_view_green"
            android:text="Submit" />
    </RelativeLayout>
</android.support.v7.widget.CardView>

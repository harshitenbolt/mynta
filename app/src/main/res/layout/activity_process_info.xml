<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:openDrawer="start">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
            android:id="@+id/iv_back_process"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tv_title_Process"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montesemibold"
            android:gravity="center"
            android:paddingRight="@dimen/_45sdp"
            android:text="E-Sign Verification"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_14sdp" />

    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- **** Place Your Content Here **** -->

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_3sdp"
            android:background="@drawable/toolbarshadow" />

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_10sdp"
        android:layout_weight="2"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            style="@style/CustomCardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clipToPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/_3sdp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:layout_weight="1">

                        <LinearLayout
                            android:id="@+id/llAgreement"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_3sdp"
                            android:background="@drawable/roundedcornergrey"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/_10sdp">

                            <ImageView

                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:src="@drawable/agreement" />

                            <TextView
                                style="@style/TextviewwithoutSize"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/montemedium"
                                android:text="AGREEMENT"
                                android:singleLine="true"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/_6sdp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ivAgreeStatus"
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginBottom="@dimen/_8sdp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rvECOM"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <LinearLayout
                            android:id="@+id/llAssessment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:background="@drawable/roundedcornergrey"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/_10sdp">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:src="@drawable/assessment" />

                            <TextView
                                style="@style/TextviewwithoutSize"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/montemedium"
                                android:singleLine="true"
                                android:text="ECOM"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/_5sdp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ivAsessStatus"
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginBottom="@dimen/_8sdp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <LinearLayout

                            android:id="@+id/llNoc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_3sdp"
                            android:background="@drawable/roundedcornergrey"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/_10sdp">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:src="@drawable/noc" />

                            <TextView
                                style="@style/TextviewwithoutSize"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/montemedium"
                                android:text="NOC"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/_6sdp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ivNOCStatus"
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginBottom="@dimen/_8sdp"

                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rvGst"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <LinearLayout
                            android:id="@+id/llGST"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:background="@drawable/roundedcornergrey"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/_10sdp">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:src="@drawable/gstdeclarational" />

                            <TextView
                                style="@style/TextviewwithoutSize"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/montemedium"
                                android:gravity="center"
                                android:lines="2"
                                android:maxLines="2"
                                android:text="GST DECLARATION"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/_5sdp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ivGSTStatus"
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginBottom="@dimen/_8sdp" />
                    </RelativeLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/_3sdp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:visibility="invisible"
                        android:layout_weight="2">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="79dp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_3sdp"
                            android:background="@drawable/roundedcornergrey"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/_10sdp">

                            <ImageView

                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:src="@drawable/agreement" />

                            <TextView
                                style="@style/TextviewwithoutSize"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/montemedium"
                                android:singleLine="true"
                                android:text="AGREEMENT"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/_6sdp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginBottom="@dimen/_8sdp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rvMSME"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <LinearLayout
                            android:id="@+id/llMSME"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:background="@drawable/roundedcornergrey"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/_10sdp">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:src="@drawable/assessment" />

                            <TextView
                                style="@style/TextviewwithoutSize"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/montemedium"
                                android:singleLine="true"
                                android:text="MSME"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/_5sdp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ivAssessMSME"
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginBottom="@dimen/_8sdp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <LinearLayout

                            android:id="@+id/llCOI"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_3sdp"
                            android:background="@drawable/roundedcornergrey"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/_10sdp">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:src="@drawable/noc" />

                            <TextView
                                style="@style/TextviewwithoutSize"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/montemedium"
                                android:text="COI"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/_6sdp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ivSOAStatus"
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginBottom="@dimen/_8sdp"

                            />
                    </RelativeLayout>

                    <RelativeLayout
                       android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:background="@drawable/roundedcornergrey"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/_10sdp">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:src="@drawable/gstdeclarational" />

                            <TextView
                                style="@style/TextviewwithoutSize"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/montemedium"
                                android:gravity="center"
                                android:lines="2"
                                android:maxLines="2"
                                android:text="GST DECLARATION"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/_5sdp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginBottom="@dimen/_8sdp" />
                    </RelativeLayout>


                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:src="@drawable/esign" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lbl_your_name"
                            style="@style/TextviewwithoutSize"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="E-sign is pending. link to sign the agreement has been sent to kirana's registered mobile number."
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            style="@style/TextviewwithoutSize"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="If link is not received , Click Resend . If completed the process, click Check E-sign"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <Button
        android:id="@+id/btnDashboard"
        style="@style/TextviewwithoutSize"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/colorYellow"
        android:fontFamily="@font/montesemibold"
        android:gravity="center"
        android:text="GO TO DASHBOARD"
        android:textColor="@color/whitePrimary" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnResend"
            style="@style/Button_withGreen"
            android:layout_weight="1"
            android:background="@color/colorBlue"
            android:text="GENERATE LINK" />

        <Button
            android:id="@+id/btnCheckSign"
            style="@style/Button_withGreen"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="CHECK ESIGN" />
    </LinearLayout>


    <!--<include layout="@layout/base_nav_drawer"></include>-->
</LinearLayout>

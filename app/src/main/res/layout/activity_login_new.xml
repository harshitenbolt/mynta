<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_30sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingBottom="@dimen/_30sdp"
            android:src="@drawable/logo_splash" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_weight=".9"
        android:gravity="center|top"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="Sign In"
            android:fontFamily="@font/montesemibold"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:clipToPadding="true"
            android:divider="@android:color/transparent"
            android:elevation="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_30sdp"
            app:cardCornerRadius="@dimen/_7sdp"
            app:cardElevation="@dimen/_5sdp"
            app:cardUseCompatPadding="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_weight=".9"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tlUsername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:gravity="top|center_vertical"
                            app:errorEnabled="true"
                            app:hintEnabled="false">

                            <EditText
                                android:id="@+id/etEmail"
                                android:layout_width="match_parent"
                                style="@style/App_EditTextStyle"
                                android:hint="@string/email_id"
                                android:inputType="textEmailAddress"
                                android:textColor="@color/colorBlack"
                                android:gravity="start|center_vertical"
                                android:imeOptions="actionNext"
                                android:nextFocusDown="@+id/etPassword" />
                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:orientation="vertical">


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tlPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:gravity="top"
                            app:errorEnabled="true"
                            app:hintEnabled="false">

                            <LinearLayout
                                style="@style/App_EditTextStyle"
                                android:layout_width="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/etPassword"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:inputType="textPassword"
                                    android:fontFamily="@font/monteregular"
                                    android:imeOptions="actionDone"
                                    android:background="@android:color/transparent"
                                    android:hint="Password" />

                                <ImageView
                                    android:id="@+id/ivShowPw"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_alignLeft="@+id/edit_password"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    app:srcCompat="@drawable/ic_eye_close"
                                    tools:ignore="VectorDrawableCompat" />
                            </LinearLayout>
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:id="@+id/tvForgot"
                            android:layout_marginTop="@dimen/_10sdp"
                            style="@style/App_TextViewSmall"
                            android:gravity="end"
                            android:textSize="@dimen/_10sdp"
                            android:text="forgot passoword"
                            android:textColor="@color/colorYellow"
                            android:fontFamily="@font/montesemibold"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:gravity="top"
                    android:orientation="vertical">


                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorBlue"
                        android:fontFamily="@font/monteregular"
                        android:text="remeber me"
                        android:textColor="@color/colorBlue"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btLogin"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        style="@style/Button_withGreen"
                        android:text="@string/sign_in" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.2">

    </LinearLayout>

</LinearLayout>
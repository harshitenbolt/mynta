<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGrey"
    tools:context=".activity.LoginActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="top|center">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:paddingTop="@dimen/_30sdp"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:paddingBottom="@dimen/_20sdp"
            android:src="@drawable/logo_splash" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center|top"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <TextView
            android:layout_width="match_parent"
            android:text="Sign In"
            android:fontFamily="@font/montserratsemibold"
            android:textStyle="normal"
            android:paddingLeft="@dimen/_5sdp"
            android:textSize="@dimen/_20sdp"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.CardView
            android:paddingTop="@dimen/_30sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/rounded_corner_whitenew"
            android:layout_height="match_parent">


            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:fontFamily="@font/montserratsemibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User Name "/>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/text_input_layout"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@drawable/etfieldbackgroundgrey"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/editText"
                            android:background="@null"
                            android:paddingBottom="@dimen/_5sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>



            </LinearLayout>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_corner_view"
                android:fontFamily="@font/rb_regular"
                android:hint="Email"
                android:inputType="textWebEmailAddress"
                android:maxLength="50"
                android:maxLines="1"
                android:paddingLeft="@dimen/margin_20dp"
                android:paddingTop="@dimen/margin_15dp"
                android:paddingRight="@dimen/margin_10dp"
                android:paddingBottom="@dimen/margin_15dp"
                android:textColor="@color/font_login"
                android:textColorHint="@color/font_login"
                android:textSize="@dimen/font_login" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_corner_view"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:fontFamily="@font/rb_regular"
                    android:hint="Password"
                    android:inputType="textWebPassword"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/margin_20dp"
                    android:paddingTop="@dimen/margin_15dp"
                    android:paddingRight="@dimen/margin_10dp"
                    android:paddingBottom="@dimen/margin_15dp"
                    android:textColor="@color/font_login"
                    android:textColorHint="@color/font_login"
                    android:textSize="@dimen/font_login" />

                <ImageView
                    android:id="@+id/ivShowPw"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignLeft="@+id/edit_password"
                    android:layout_marginRight="@dimen/_10sdp"
                    app:srcCompat="@drawable/ic_eye_close" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvForgot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15dp"
                android:gravity="end"
                android:text="Forgot Password ?"
                android:textSize="@dimen/margin_15dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/rounded_corner_button"
                android:fontFamily="@font/rb_medium"
                android:gravity="center"
                android:inputType="textLongMessage"
                android:paddingLeft="@dimen/margin_60dp"
                android:paddingRight="@dimen/margin_60dp"
                android:text="Sign in"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_signin" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="match_parent">

    </LinearLayout>
</LinearLayout>


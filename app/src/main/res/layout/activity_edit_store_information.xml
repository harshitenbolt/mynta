<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey"
    android:clickable="true"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tv_title_Process"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montesemibold"
            android:gravity="center"
            android:paddingRight="@dimen/_45sdp"
            android:text="Update Store Details"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_14sdp" />

    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <!-- **** Place Your Content Here **** -->

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_3sdp"
            android:background="@drawable/toolbarshadow" />

    </FrameLayout>


    <ScrollView
        android:id="@+id/scMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/item_wrapper_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_10sdp">

            <androidx.cardview.widget.CardView
                style="@style/CustomCardView"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:orientation="vertical">



                    <LinearLayout
                        android:id="@+id/llOwnerInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Store Name"
                            android:textColor="@color/colorBlue" />

                        <EditText
                            android:id="@+id/etStoreName"
                            style="@style/App_EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:inputType="text"
                            android:nextFocusDown="@+id/etOwnerName"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_10sdp" />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:background="@color/mediumLightGrey" />


                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/montesemibold"
                            android:text="Store Address"
                            android:textColor="@color/colorBlue"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Shop/House/Flat No."
                            android:textColor="@color/colorBlue" />

                        <EditText
                            android:id="@+id/etShopHouseNo"
                            style="@style/App_EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:inputType="text"
                            android:nextFocusDown="@id/etStreetName"
                            android:textSize="@dimen/_10sdp" />


                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Street/Apartment/Locality"
                            android:textColor="@color/colorBlue" />

                        <EditText
                            android:id="@+id/etStreetName"
                            style="@style/App_EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:inputType="text"
                            android:nextFocusDown="@id/etLandmark"
                            android:textSize="@dimen/_10sdp" />


                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Landmark"
                            android:textColor="@color/colorBlue" />

                        <EditText
                            android:id="@+id/etLandmark"
                            style="@style/App_EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:inputType="text"
                            android:nextFocusDown="@id/etStorePincode"
                            android:textSize="@dimen/_10sdp" />


                        <TextView

                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Store Pincode"
                            android:textColor="@color/colorBlue" />

                        <EditText
                            android:id="@+id/etStorePincode"
                            style="@style/App_EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:inputType="number"
                            android:maxLength="6"
                            android:nextFocusDown="@+id/etRouteNo"
                            android:textSize="@dimen/_10sdp" />


                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="City"
                            android:textColor="@color/colorBlue" />

                        <EditText
                            android:id="@+id/etStoreCity"
                            style="@style/App_EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:clickable="false"
                            android:editable="false"
                            android:enabled="false"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="State"
                            android:textColor="@color/colorBlue" />

                        <EditText
                            android:id="@+id/etStoreState"
                            style="@style/App_EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:clickable="false"
                            android:enabled="false"
                            android:inputType="text"
                            android:nextFocusDown="@id/etRouteNo"
                            android:textSize="@dimen/_10sdp" />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:background="@color/mediumLightGrey" />


                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:text="DC"
                            android:textColor="@color/colorBlue" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:background="@drawable/etfieldbackgroundgrey">

                            <Spinner
                                android:id="@+id/dc"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:backgroundTint="@color/colorPrimary"
                                android:gravity="center"
                                android:paddingLeft="@dimen/_10sdp"
                                android:textSize="@dimen/_10sdp" />
                        </RelativeLayout>

                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Route"
                            android:textColor="@color/colorBlue" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:orientation="horizontal">


                            <EditText
                                android:id="@+id/etRouteNo"
                                style="@style/App_EditTextStyle"
                                android:layout_width="match_parent"
                                android:imeOptions="actionDone"
                                android:inputType="number"
                                android:paddingLeft="@dimen/_30sdp"
                                android:textSize="@dimen/_10sdp" />

                            <TextView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:text="R-" />

                        </RelativeLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llGeneralInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="vertical"
                        android:visibility="visible">


                        <LinearLayout
                            android:id="@+id/llGST"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/montesemibold"
                                    android:text="GST Certificate"
                                    android:textColor="@color/colorBlue"
                                    android:textSize="@dimen/_11sdp" />

                                <ImageView
                                    android:id="@+id/ivGSTImageSelected"
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:layout_gravity="end"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:src="@drawable/bluecheck"
                                    android:visibility="gone" />
                            </LinearLayout>


                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_110sdp"
                                android:layout_height="@dimen/_110sdp"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:background="@drawable/roundedcornergreythick"
                                android:elevation="@dimen/_5sdp"
                                app:cardCornerRadius="@dimen/_5sdp">


                                <ImageView
                                    android:id="@+id/ivGSTImage"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/ic_add_img"
                                    android:scaleType="centerCrop" />

                            </androidx.cardview.widget.CardView>


                        </LinearLayout>

                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="Types of vendor"

                            android:textColor="@color/colorBlue" />

                        <RelativeLayout
                            android:id="@+id/rvTypeVendor"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:background="@drawable/etfieldbackgroundgrey">

                            <TextView
                                android:id="@+id/tvTypeofVendor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:hint="Type of vendor" />

                            <Spinner
                                android:id="@+id/snType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:backgroundTint="@color/colorPrimary"
                                android:padding="@dimen/_10sdp" />
                        </RelativeLayout>


                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="Vendor Type Detail"
                            android:textColor="@color/colorBlue" />

                        <RelativeLayout
                            android:id="@+id/rvVendorTypeDetail"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:background="@drawable/etfieldbackgroundgrey">

                            <TextView
                                android:id="@+id/tvVendorTypeDetail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:hint="Vendor Type Detail" />

                            <Spinner
                                android:id="@+id/snVendorTypeDetail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:backgroundTint="@color/colorPrimary"
                                android:padding="@dimen/_10sdp" />
                        </RelativeLayout>


                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="Locality"
                            android:textColor="@color/colorBlue" />

                        <RelativeLayout
                            android:id="@+id/rvLocality"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:background="@drawable/etfieldbackgroundgrey">


                            <TextView
                                android:id="@+id/tvLocality"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:hint="Locality" />

                            <Spinner
                                android:id="@+id/snLocality"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:backgroundTint="@color/colorPrimary"
                                android:padding="@dimen/_10sdp" />
                        </RelativeLayout>


                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="Approach"
                            android:textColor="@color/colorBlue" />

                        <RelativeLayout
                            android:id="@+id/rvApproach"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:background="@drawable/etfieldbackgroundgrey">

                            <TextView
                                android:id="@+id/tvApproach"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:hint="Approach" />

                            <Spinner
                                android:id="@+id/snApproach"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:backgroundTint="@color/colorPrimary"
                                android:padding="@dimen/_10sdp" />
                        </RelativeLayout>

                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="Language"
                            android:textColor="@color/colorBlue" />

                        <RelativeLayout
                            android:id="@+id/rvSelectLanguage"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:background="@drawable/etfieldbackgroundgrey">

                            <TextView
                                android:id="@+id/tvLanguage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:hint="Languages" />


                            <Spinner
                                android:id="@+id/snLanguage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:backgroundTint="@color/colorPrimary"
                                android:padding="@dimen/_10sdp" />
                        </RelativeLayout>

                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="Shipment Transfer"
                            android:textColor="@color/colorBlue" />

                        <RelativeLayout
                            android:id="@+id/rvShipment"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:background="@drawable/etfieldbackgroundgrey">

                            <TextView
                                android:id="@+id/tvShipment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:hint="Shipment Transfer" />

                            <Spinner
                                android:id="@+id/snShipment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:backgroundTint="@color/colorPrimary"
                                android:padding="@dimen/_10sdp" />
                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp">

                            <TextView
                                style="@style/App_TextViewSmall"
                                android:layout_alignParentStart="true"
                                android:fontFamily="@font/montesemibold"
                                android:gravity="start"
                                android:singleLine="false"
                                android:text="Partnered with anyother\ne-commerce/logistic company"
                                android:textSize="@dimen/_11sdp" />

                            <Switch
                                android:id="@+id/sw_partner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true" />
                        </RelativeLayout>


                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Licence Number"
                            android:textColor="@color/colorBlue" />

                        <EditText
                            android:id="@+id/etLicenceNumber"
                            style="@style/App_EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_marginBottom="@dimen/_10sdp" />


                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="Store Type"
                            android:textColor="@color/colorBlue" />

                        <RelativeLayout
                            android:id="@+id/rvStoreType"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:background="@drawable/etfieldbackgroundgrey">

                            <TextView
                                android:id="@+id/tvStoreType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/margin_15dp"
                                android:fontFamily="@font/monteregular"
                                android:singleLine="true"
                                android:text="Select Store Type"
                                android:textSize="@dimen/font_login" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp">


        <Button
            android:id="@+id/btNext"
            style="@style/Button_withGreen"
            android:layout_weight="1"
            android:background="@color/colorYellow"
            android:text="SUBMIT" />
    </LinearLayout>


</LinearLayout>
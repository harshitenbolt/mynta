<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:background="@color/whitePrimary">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tvFinancialYear"
        android:layout_width="match_parent"
        android:textSize="@dimen/_10sdp"
        android:text=""
        android:layout_marginLeft="@dimen/_5sdp"
        android:textColor="@color/colorBlue"
        android:fontFamily="@font/montemedium"
        android:layout_height="wrap_content">

    </TextView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:clipToPadding="true"
        android:elevation="@dimen/_15sdp"
        app:cardCornerRadius="@dimen/_8sdp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">



                            <EditText
                                android:hint="ITR Number"
                                android:id="@+id/etITRNumber"
                                android:inputType="number"
                                style="@style/App_EditTextStyle"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:drawablePadding="@dimen/_5sdp"
                                android:fontFamily="@font/montserratregular" />




                            <TextView
                                android:hint="ITR Date"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:id="@+id/tvItRDate"
                                android:layout_marginLeft="@dimen/_2sdp"
                                style="@style/App_EditTextStyle"
                                android:layout_width="match_parent"
                                android:fontFamily="@font/montserratregular"
                                android:gravity="center_vertical"
                                android:imeOptions="actionNext"
                                android:inputType="none"
                                android:text="" />

                    </LinearLayout>



                    <ImageView
                        android:id="@+id/ivDelete"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:background="@drawable/delete"
                        android:visibility="gone" />
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="@dimen/_75sdp"
                    app:cardCornerRadius="@dimen/_5sdp">

                    <ImageView
                        app:srcCompat="@drawable/ic_add_img"
                        android:id="@+id/ivAddImageITR"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey"
    android:clickable="true"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tv_title_Process"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montesemibold"
            android:gravity="center"
            android:paddingRight="@dimen/_45sdp"
            android:text="Update Owner Details"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_14sdp" />

    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <!-- **** Place Your Content Here **** -->

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_3sdp"
            android:background="@drawable/toolbarshadow" />

    </FrameLayout>


    <ScrollView
        android:id="@+id/scMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/item_wrapper_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_10sdp">

            <androidx.cardview.widget.CardView
                style="@style/CustomCardView"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_2sdp"
                            android:layout_marginRight="@dimen/_3sdp"
                            android:layout_weight="1"
                            android:background="@color/colorPrimary" />

                        <View
                            android:id="@+id/view2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_2sdp"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:layout_marginRight="@dimen/_3sdp"
                            android:layout_weight="1"
                            android:background="@color/lightGrey" />

                        <View
                            android:id="@+id/view3"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_2sdp"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:layout_weight="1"
                            android:background="@color/lightGrey" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llOwnerInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"

                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/montesemibold"
                                        android:text="STORE IMAGE"
                                        android:textColor="@color/colorBlue"
                                        android:textSize="@dimen/_11sdp" />

                                    <ImageView
                                        android:id="@+id/ivStoreImageSelected"
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:layout_gravity="end"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:src="@drawable/bluecheck"
                                        android:visibility="gone" />
                                </LinearLayout>


                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_110sdp"
                                    android:layout_height="@dimen/_110sdp"
                                    android:layout_marginLeft="@dimen/_2sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_marginRight="@dimen/_2sdp"
                                    android:layout_marginBottom="@dimen/_2sdp"
                                    android:background="@drawable/roundedcornergreythick"
                                    android:elevation="@dimen/_5sdp"
                                    app:cardCornerRadius="@dimen/_5sdp">


                                    <ImageView
                                        android:id="@+id/ivStoreImage"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/ic_add_img"
                                        android:scaleType="centerCrop" />

                                </androidx.cardview.widget.CardView>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        style="@style/TextviewwithoutSize"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/montesemibold"
                                        android:text="OWNER IMAGE"
                                        android:textColor="@color/colorYellow"
                                        android:textSize="@dimen/_11sdp" />

                                    <ImageView
                                        android:id="@+id/ivOwnerImageSelected"
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:layout_gravity="end"
                                        android:src="@drawable/yellowcheck"
                                        android:visibility="gone" />
                                </LinearLayout>


                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_110sdp"
                                    android:layout_height="@dimen/_110sdp"
                                    android:layout_marginLeft="@dimen/_2sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_marginRight="@dimen/_2sdp"
                                    android:layout_marginBottom="@dimen/_2sdp"
                                    android:elevation="@dimen/_5sdp"
                                    app:cardCornerRadius="@dimen/_5sdp">

                                    <ImageView
                                        android:id="@+id/ivOwnerImage"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        app:srcCompat="@drawable/ic_add_img" />

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>


                        </LinearLayout>

                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="Owner's Name"
                            android:textColor="@color/colorBlue" />

                        <EditText
                            android:id="@+id/etOwnerName"
                            style="@style/App_EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:nextFocusDown="@+id/etShopHouseNo"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_10sdp" />


                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Email ID"
                            android:textColor="@color/colorBlue" />

                        <EditText
                            android:id="@+id/etEmailInfo"
                            style="@style/App_EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:inputType="textEmailAddress"
                            android:nextFocusDown="@id/etStoreName"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_10sdp" />


                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Date of Birth"
                            android:textColor="@color/colorBlue" />

                        <TextView
                            android:id="@+id/etDateOfBirth"
                            style="@style/App_EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:fontFamily="@font/monteregular"
                            android:gravity="center_vertical"
                            android:imeOptions="actionNext"
                            android:inputType="none"
                            android:paddingLeft="@dimen/_10sdp"
                            android:text="Date of Birth"
                            android:textSize="@dimen/_10sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llAddressInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="vertical"
                        android:visibility="visible">


                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/montesemibold"
                            android:gravity="start"
                            android:text="Current Address"
                            android:textSize="@dimen/_11sdp" />


                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="Shop/House/Flat No."
                            android:textColor="@color/colorBlue" />

                        <EditText
                            android:id="@+id/etCurrentShopNo"
                            style="@style/App_EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:inputType="text"
                            android:nextFocusDown="@id/etCurrentStreet"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_10sdp" />


                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Street/Apartment/Locality"
                            android:textColor="@color/colorBlue" />

                        <EditText
                            android:id="@+id/etCurrentStreet"
                            style="@style/App_EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:inputType="text"
                            android:nextFocusDown="@+id/etCurrentLandmark"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_10sdp" />


                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Landmark"
                            android:textColor="@color/colorBlue" />

                        <EditText
                            android:id="@+id/etCurrentLandmark"
                            style="@style/App_EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:inputType="text"
                            android:nextFocusDown="@+id/etCurrentPincode"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_10sdp" />


                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Pincode"
                            android:textColor="@color/colorBlue" />

                        <EditText
                            android:id="@+id/etCurrentPincode"
                            style="@style/App_EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:inputType="number"
                            android:maxLength="6"
                            android:nextFocusDown="@+id/etCurrentCity"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="City"
                            android:textColor="@color/colorBlue" />

                        <EditText
                            android:id="@+id/etCurrentCity"
                            style="@style/App_EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:inputType="text"
                            android:nextFocusDown="@+id/etCurrentState"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="State"
                            android:textColor="@color/colorBlue" />

                        <EditText
                            android:id="@+id/etCurrentState"
                            style="@style/App_EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:inputType="text"
                            android:textSize="@dimen/_10sdp" />


                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/montesemibold"
                            android:gravity="start"
                            android:text="Permanent Address"
                            android:textSize="@dimen/_11sdp" />

                        <CheckBox
                            android:id="@+id/cbSameAsAbove"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:buttonTint="@color/colorBlue"
                            android:fontFamily="@font/monteregular"
                            android:text="Same as above"
                            android:textColor="@color/colorBlue"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />


                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Shop/House/Flat No."
                            android:textColor="@color/colorBlue" />

                        <EditText
                            android:id="@+id/etPermShopNo"
                            style="@style/App_EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:inputType="text"
                            android:nextFocusDown="@id/etPerStreet"
                            android:textSize="@dimen/_10sdp" />


                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Street/Apartment/Locality"
                            android:textColor="@color/colorBlue" />

                        <EditText
                            android:id="@+id/etPerStreet"
                            style="@style/App_EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:inputType="text"
                            android:nextFocusDown="@id/etPerLandmark"
                            android:textSize="@dimen/_10sdp" />


                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Landmark"
                            android:textColor="@color/colorBlue" />

                        <EditText
                            android:id="@+id/etPerLandmark"
                            style="@style/App_EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:inputType="text"
                            android:nextFocusDown="@id/etPerPincode"
                            android:textSize="@dimen/_10sdp" />


                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Pincode"
                            android:textColor="@color/colorBlue" />

                        <EditText
                            android:id="@+id/etPerPincode"
                            style="@style/App_EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:inputType="number"
                            android:maxLength="6"
                            android:nextFocusDown="@id/etPerCity"
                            android:textSize="@dimen/_10sdp" />


                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="City"

                            android:textColor="@color/colorBlue" />

                        <EditText
                            android:id="@+id/etPerCity"
                            style="@style/App_EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:inputType="text"
                            android:nextFocusDown="@id/etPerState"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="State"
                            android:textColor="@color/colorBlue" />

                        <EditText
                            android:id="@+id/etPerState"
                            style="@style/App_EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:textSize="@dimen/_10sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llGeneralInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="vertical"
                        android:visibility="visible">


                        <LinearLayout
                            android:id="@+id/llGST"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/montesemibold"
                                    android:text="GST Certificate"
                                    android:textColor="@color/colorBlue"
                                    android:textSize="@dimen/_11sdp" />

                                <ImageView
                                    android:id="@+id/ivGSTImageSelected"
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:layout_gravity="end"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:src="@drawable/bluecheck"
                                    android:visibility="gone" />
                            </LinearLayout>


                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_110sdp"
                                android:layout_height="@dimen/_110sdp"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:background="@drawable/roundedcornergreythick"
                                android:elevation="@dimen/_5sdp"
                                app:cardCornerRadius="@dimen/_5sdp">


                                <ImageView
                                    android:id="@+id/ivGSTImage"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/ic_add_img"
                                    android:scaleType="centerCrop" />

                            </androidx.cardview.widget.CardView>


                        </LinearLayout>


                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="Language"
                            android:textColor="@color/colorBlue" />

                        <RelativeLayout
                            android:id="@+id/rvSelectLanguage"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:background="@drawable/etfieldbackgroundgrey">

                            <TextView
                                android:id="@+id/tvLanguage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:hint="Languages" />


                            <Spinner
                                android:id="@+id/snLanguage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:backgroundTint="@color/colorPrimary"
                                android:padding="@dimen/_10sdp" />
                        </RelativeLayout>


                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp">

        <Button
            android:id="@+id/btSubmit"
            style="@style/Button_withGreen"
            android:layout_weight="1"
            android:background="@color/colorYellow"
            android:text="SUBMIT" />
    </LinearLayout>


</LinearLayout>
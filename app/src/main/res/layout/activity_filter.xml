<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FilterActivity">


    <RelativeLayout
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignParentTop="true"
        android:background="@color/whitePrimary"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/montserratsemibold"
            android:gravity="center"
            android:singleLine="true"
            android:text="Filter"
            android:textSize="@dimen/_13sdp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:fontFamily="@font/montserratbold"
            android:text="Clear All"
            android:visibility="gone"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_10sdp" />


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fltop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llTop">

        <!-- **** Place Your Content Here **** -->

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_3sdp"
            android:background="@drawable/toolbarshadow" />

    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fltop"
        android:layout_alignParentBottom="true">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_above="@+id/llBottom"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvFilterMainCategory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorlightGrey">

                </androidx.recyclerview.widget.RecyclerView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llSearch"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:background="@drawable/roundedcornergreythick"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <AutoCompleteTextView
                                android:id="@+id/etSearchPlace"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_40sdp"
                                android:background="@null"
                                android:dropDownHeight="wrap_content"
                                android:hint="Search"
                                android:paddingLeft="@dimen/_10sdp"
                                android:singleLine="true"
                                android:textAllCaps="false" />

                            <ImageView
                                android:id="@+id/ivSearch"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_marginRight="@dimen/_45sdp"
                                android:src="@drawable/magnifiertool" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <Spinner
                                    android:id="@+id/spSearch"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                </Spinner>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvFilterSubCategory"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:background="@color/whitePrimary">

                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>


            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_weight=".5"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvFilterWith"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/_15sdp"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="@dimen/_18sdp"
                    android:text="Filter with :-"/>

                <TextView
                    android:id="@+id/tvDataName"
                    android:gravity="start"
                    android:layout_gravity="center_horizontal|top"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            </ScrollView>

        </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/llBottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btCancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorGrey"
                android:fontFamily="@font/montserratbold"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/whitePrimary" />

            <Button
                android:id="@+id/btApply"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:fontFamily="@font/montserratbold"
                android:text="Apply"
                android:textAllCaps="false" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/activity_thread_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            tools:ignore="RtlCompat" />

    </RelativeLayout>

</RelativeLayout>
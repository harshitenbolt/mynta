<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rvContentMainOTP"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey"
    android:clickable="true"
    tools:context=".activity.DashboardActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_17sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_17sdp"
            android:layout_marginBottom="@dimen/_35sdp"
            android:clipToPadding="true"
            app:cardCornerRadius="@dimen/_8sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_15sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivTimeZone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_95sdp"
                        android:layout_marginBottom="@dimen/_20sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tvGreeting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/montserratsemibold"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/colorYellow"
                            android:textSize="@dimen/_15sdp" />
                        <TextView
                            android:id="@+id/tvNameofUser"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_15sdp"
                            android:fontFamily="@font/montesemibold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:orientation="vertical">


                        <TextView
                            style="@style/TextviewwithoutSize"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:fontFamily="@font/montelight"
                            android:text="Enter OTP sent on your mobile no"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:id="@+id/tvMobile"
                            style="@style/TextviewwithoutSize"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:fontFamily="@font/montesemibold"
                            android:text="+91 "
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">


                        <com.canvascoders.opaper.OtpView.PinView
                            android:id="@+id/secondPinView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:hint="-"
                            app:cursorColor="@color/colorBlack"
                            app:itemSpacing="@dimen/_20sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btVerify"
                            style="@style/Button_withGreen"
                            android:layout_width="match_parent"
                            android:text="VERIFY" />

                        <TextView
                            android:id="@+id/tvTimeofOTP"
                            style="@style/TextviewwithoutSize"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/montesemibold"
                            android:text="Please wait... in"
                            android:textColor="@color/colorYellow"
                            android:textSize="@dimen/_10sdp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/App_TextViewSmall"
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:text="Didn't Receive the OTP ?"
                                android:textColor="@color/mediumGrey"
                                android:textSize="@dimen/_10sdp" />

                            <TextView
                                android:id="@+id/tvResend"
                                style="@style/App_TextViewSmall"
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:focusable="false"
                                android:fontFamily="@font/montesemibold"
                                android:text="Resend OTP"
                                android:textColor="@color/colorYellow"
                                android:textSize="@dimen/_11sdp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvChangeMobile"
                            style="@style/TextviewwithoutSize"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:focusable="false"
                            android:visibility="gone"
                            android:fontFamily="@font/montesemibold"
                            android:text="Change Mobile No"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:focusable="true">
        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/txt_show_msg_sucess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#A5D6A7"
            android:gravity="center"
            android:padding="15dp"
            android:text="Sucessfully Done"
            android:textColor="#1E6023"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_show_msg_fail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFCDD2"
            android:gravity="center"
            android:padding="15dp"
            android:text="Sucessfully Done"
            android:textColor="#F44336"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>
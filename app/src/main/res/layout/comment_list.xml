<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:id="@+id/ivAttachment1"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/backgroundshapecircle"
                android:visibility="visible"
                android:layout_marginBottom="@dimen/_5sdp"/>

            <TextView
                android:id="@+id/tvDateforAdmin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:fontFamily="@font/montesemibold"
                android:gravity="bottom"
                android:layout_weight="2"
                android:singleLine="true"
                android:text="21 july 2019"
                android:textSize="@dimen/_5sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/ivAttachment"
                    android:fontFamily="@font/rb_medium"
                    android:gravity="start|center"
                    android:singleLine="true"
                    android:text="" />

                <TextView
                    android:id="@+id/tvComment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/ivAttachment"
                    android:fontFamily="@font/monteregular"
                    android:gravity="start|center"
                    android:lines="2"
                    android:text=""
                    android:maxLines="2"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivAttachment2"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/backgroundshapecircle"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvDateforAgent"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_35sdp"
                android:fontFamily="@font/montesemibold"
                android:gravity="bottom"
                android:singleLine="true"
                android:text="21 july 2019"
                android:textSize="@dimen/_5sdp"
                android:visibility="gone" />

        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>

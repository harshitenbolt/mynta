<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey"
    android:clickable="true"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/_15sdp"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/montesemibold"
                android:gravity="start|center"
                android:text="Add Delivery Boys"
                android:textColor="@color/colorBlack"
                android:textSize="20dp" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <!-- **** Place Your Content Here **** -->

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_3sdp"
            android:background="@drawable/toolbarshadow" />

    </FrameLayout>

    <ScrollView
        android:id="@+id/svMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"

        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/item_wrapper_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_10sdp">

            <androidx.cardview.widget.CardView
                style="@style/CustomCardView"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/llDrivingInformation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_25sdp"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            style="@style/App_TextViewSmall"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/montesemibold"
                            android:gravity="center"
                            android:text="Document Information"
                            android:textSize="@dimen/_11sdp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_10sdp">

                            <RadioGroup
                                android:id="@+id/rgMain"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <RadioButton
                                    android:id="@+id/rbDriving"
                                    style="@style/KycRadioButton"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="@dimen/_3sdp"
                                    android:layout_weight="1"
                                    android:button="@android:color/transparent"
                                    android:checked="true"
                                    android:drawableTop="@drawable/drivinglicence"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:gravity="center"
                                    android:padding="@dimen/_10sdp"
                                    android:singleLine="true"
                                    android:text="DRIVING LICENCE"
                                    android:textSize="@dimen/_7sdp">

                                </RadioButton>

                                <RadioButton
                                    android:id="@+id/rbAdharCard"
                                    style="@style/KycRadioButton"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:layout_weight="1"
                                    android:button="@android:color/transparent"
                                    android:drawableTop="@drawable/aadharcard"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:gravity="center"
                                    android:padding="@dimen/_10sdp"
                                    android:singleLine="true"
                                    android:text="AADHAR CARD"
                                    android:textSize="@dimen/_7sdp">

                                </RadioButton>


                                <RadioButton
                                    android:id="@+id/rbVoter"
                                    style="@style/KycRadioButton"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/_3sdp"
                                    android:layout_marginRight="@dimen/_3sdp"
                                    android:layout_weight="1"
                                    android:button="@android:color/transparent"
                                    android:drawableTop="@drawable/voterid"
                                    android:drawablePadding="@dimen/_8sdp"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:padding="@dimen/_8sdp"
                                    android:text="VOTER ID"
                                    android:textSize="@dimen/_7sdp">

                                </RadioButton>


                            </RadioGroup>

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/llDrivingDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="@dimen/_105sdp"
                                    android:layout_height="@dimen/_105sdp"

                                    android:background="@drawable/dotted_bg"
                                    android:gravity="center">

                                    <ImageView
                                        android:id="@+id/ivDrivingLicence"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_105sdp"
                                        android:src="@drawable/blfront" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="@dimen/_105sdp"
                                    android:layout_height="@dimen/_105sdp"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:background="@drawable/dotted_bg"
                                    android:gravity="center">

                                    <ImageView
                                        android:id="@+id/ivDrivingLicenceBack"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_105sdp"
                                        android:src="@drawable/dlback" />

                                </LinearLayout>
                            </LinearLayout>

                            <TextView
                                style="@style/App_TextViewSmall"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="Driving Licence Number"
                                android:textColor="@color/colorBlue" />

                            <EditText
                                android:id="@+id/etLicenceNumber"
                                style="@style/App_EditTextStyle"
                                android:layout_width="match_parent"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_marginBottom="@dimen/_10sdp" />


                            <TextView
                                style="@style/App_TextViewSmall"
                                android:text="Licence issue date"
                                android:textColor="@color/colorBlue" />

                            <TextView
                                android:id="@+id/tvIssueDate"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:background="@drawable/etfieldbackgroundgrey"
                                android:fontFamily="@font/monteregular"
                                android:gravity="start|center_vertical"
                                android:imeOptions="actionDone"
                                android:paddingLeft="@dimen/_10sdp"
                                android:text="Licence issue date" />

                            <TextView
                                style="@style/App_TextViewSmall"
                                android:text="Licence valid till date"
                                android:textColor="@color/colorBlue" />

                            <TextView
                                android:id="@+id/tvValidTilldate"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:background="@drawable/etfieldbackgroundgrey"
                                android:fontFamily="@font/monteregular"
                                android:gravity="start|center_vertical"
                                android:imeOptions="actionDone"
                                android:paddingLeft="@dimen/_10sdp"
                                android:text="Licence valid till date" />


                            <TextView
                                style="@style/App_TextViewSmall"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="Date of Birth mentioned in Driving Licence"
                                android:textColor="@color/colorBlue" />

                            <TextView
                                android:id="@+id/tvDateofBirth"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:background="@drawable/etfieldbackgroundgrey"
                                android:fontFamily="@font/monteregular"
                                android:gravity="start|center_vertical"
                                android:imeOptions="actionDone"
                                android:paddingLeft="@dimen/_10sdp"
                                android:text="Date of Birth" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llAadharDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="@dimen/_15sdp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="5"
                                        android:orientation="horizontal">

                                        <TextView
                                            style="@style/TextviewwithoutSize"
                                            android:layout_width="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:fontFamily="@font/montesemibold"
                                            android:gravity="center"
                                            android:singleLine="true"
                                            android:text="AADHAR CARD FRONT SIDE"
                                            android:textColor="@color/colorBlue"
                                            android:textSize="@dimen/_8sdp" />

                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:id="@+id/tvAdharFront"
                                                style="@style/App_TextViewSmall"
                                                android:layout_width="wrap_content"
                                                android:layout_alignParentEnd="true"
                                                android:layout_centerVertical="true"
                                                android:background="@drawable/rounded_corner_view_blue"
                                                android:focusable="false"
                                                android:fontFamily="@font/montebold"
                                                android:gravity="center"
                                                android:padding="@dimen/_4sdp"
                                                android:text="CLICK HERE"
                                                android:textColor="@color/whitePrimary"
                                                android:textSize="@dimen/_6sdp" />

                                            <ImageView
                                                android:id="@+id/ivCheckAdharSelected"
                                                android:layout_width="@dimen/_15sdp"
                                                android:layout_height="@dimen/_15sdp"
                                                android:layout_alignParentEnd="true"
                                                android:layout_centerVertical="true"
                                                android:src="@drawable/bluecheck"
                                                android:visibility="gone" />

                                        </RelativeLayout>
                                    </RelativeLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_160sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_marginBottom="@dimen/_20sdp"
                                        android:layout_weight="1"
                                        android:background="@drawable/roundedcornergrey">

                                        <ImageView
                                            android:id="@+id/ivImageAdharFront"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_margin="@dimen/_10sdp"
                                            android:scaleType="centerInside"
                                            android:src="@drawable/aadharcardfront" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"

                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="5"
                                        android:orientation="horizontal">

                                        <TextView
                                            style="@style/TextviewwithoutSize"
                                            android:layout_width="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:fontFamily="@font/montesemibold"
                                            android:gravity="center"
                                            android:singleLine="true"
                                            android:text="AADHAR CARD BACK SIDE"
                                            android:textColor="@color/colorYellow"
                                            android:textSize="@dimen/_8sdp" />

                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:id="@+id/tvAdharBack"
                                                style="@style/App_TextViewSmall"
                                                android:layout_width="wrap_content"
                                                android:layout_alignParentEnd="true"
                                                android:layout_centerVertical="true"
                                                android:background="@drawable/rounded_corner_view_yellow"
                                                android:focusable="false"
                                                android:fontFamily="@font/montebold"
                                                android:gravity="center"
                                                android:padding="@dimen/_4sdp"
                                                android:text="CLICK HERE"
                                                android:textColor="@color/whitePrimary"
                                                android:textSize="@dimen/_6sdp" />

                                            <ImageView
                                                android:id="@+id/ivCheckAdharBackSelected"
                                                android:layout_width="@dimen/_15sdp"
                                                android:layout_height="@dimen/_15sdp"
                                                android:layout_alignParentEnd="true"
                                                android:layout_centerVertical="true"
                                                android:src="@drawable/yellowcheck"
                                                android:visibility="gone" />
                                        </RelativeLayout>


                                    </RelativeLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_160sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_marginBottom="@dimen/_20sdp"
                                        android:layout_weight="1"
                                        android:background="@drawable/roundedcornergrey">

                                        <ImageView
                                            android:id="@+id/ivImageAdharBack"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_margin="@dimen/_10sdp"
                                            android:src="@drawable/aadhardcardback" />
                                    </LinearLayout>
                                </LinearLayout>


                                <TextView
                                    android:id="@+id/tvScan"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_20sdp"
                                    android:layout_marginBottom="@dimen/_20sdp"
                                    android:focusable="false"
                                    android:fontFamily="@font/montebold"
                                    android:gravity="center"
                                    android:text="CLICK TO SCAN QR CODE"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/_12sdp" />


                                <EditText
                                    android:id="@+id/etAdharName"
                                    style="@style/App_EditTextStyle"
                                    android:layout_width="match_parent"
                                    android:hint="Name"
                                    android:inputType="textCapCharacters"
                                    android:textAllCaps="true" />

                                <RelativeLayout
                                    android:id="@+id/rvSelctAdharDOB"
                                    style="@style/App_EditTextStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_marginTop="@dimen/_10sdp">

                                    <TextView
                                        android:id="@+id/tvDOBAdhar"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/monteregular"
                                        android:singleLine="true"
                                        android:text="Date of Birth" />

                                </RelativeLayout>

                                <EditText
                                    android:id="@+id/etAdharNumber"
                                    style="@style/App_EditTextStyle"
                                    android:layout_width="match_parent"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:hint="AADHAR Number"
                                    android:inputType="number"
                                    android:maxLength="12" />


                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llVoterInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="@dimen/_15sdp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="5"
                                        android:orientation="horizontal">

                                        <TextView
                                            style="@style/TextviewwithoutSize"
                                            android:layout_width="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:fontFamily="@font/montesemibold"
                                            android:gravity="center"
                                            android:singleLine="true"
                                            android:text="VOTER ID FRONT SIDE"
                                            android:textColor="@color/colorBlue"
                                            android:textSize="@dimen/_8sdp" />

                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:id="@+id/tvVoterFront"
                                                style="@style/App_TextViewSmall"
                                                android:layout_width="wrap_content"
                                                android:layout_alignParentEnd="true"
                                                android:layout_centerVertical="true"
                                                android:background="@drawable/rounded_corner_view_blue"
                                                android:focusable="false"
                                                android:fontFamily="@font/montebold"
                                                android:gravity="center"
                                                android:padding="@dimen/_4sdp"
                                                android:text="CLICK HERE"
                                                android:textColor="@color/whitePrimary"
                                                android:textSize="@dimen/_6sdp" />

                                            <ImageView
                                                android:id="@+id/ivcheckedVoterFront"
                                                android:layout_width="@dimen/_15sdp"
                                                android:layout_height="@dimen/_15sdp"
                                                android:layout_alignParentEnd="true"
                                                android:layout_centerVertical="true"
                                                android:src="@drawable/bluecheck"
                                                android:visibility="gone" />
                                        </RelativeLayout>
                                    </RelativeLayout>

                                    <LinearLayout
                                        android:layout_width="@dimen/_200sdp"
                                        android:layout_height="@dimen/_250sdp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/_20sdp"
                                        android:background="@drawable/roundedcornergrey">

                                        <ImageView
                                            android:id="@+id/ivVoterFront"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="@dimen/_20sdp"
                                            android:layout_marginTop="@dimen/_10sdp"
                                            android:layout_marginRight="@dimen/_20sdp"
                                            android:layout_marginBottom="@dimen/_10sdp"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/voterfront" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="@dimen/_20sdp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="5"
                                        android:orientation="horizontal">

                                        <TextView
                                            style="@style/TextviewwithoutSize"
                                            android:layout_width="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:fontFamily="@font/montesemibold"
                                            android:gravity="center"
                                            android:singleLine="true"
                                            android:text="VOTER ID BACK SIDE"
                                            android:textColor="@color/colorYellow"
                                            android:textSize="@dimen/_8sdp" />

                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:id="@+id/tvVoterBack"
                                                style="@style/App_TextViewSmall"
                                                android:layout_width="wrap_content"
                                                android:layout_alignParentEnd="true"
                                                android:layout_centerVertical="true"
                                                android:background="@drawable/rounded_corner_view_yellow"
                                                android:focusable="false"
                                                android:fontFamily="@font/montebold"
                                                android:gravity="center"
                                                android:padding="@dimen/_4sdp"
                                                android:text="CLICK HERE"
                                                android:textColor="@color/whitePrimary"
                                                android:textSize="@dimen/_6sdp" />

                                            <ImageView
                                                android:id="@+id/ivcheckedVoterBack"
                                                android:layout_width="@dimen/_15sdp"
                                                android:layout_height="@dimen/_15sdp"
                                                android:layout_alignParentEnd="true"
                                                android:layout_centerVertical="true"
                                                android:src="@drawable/yellowcheck"
                                                android:visibility="gone" />
                                        </RelativeLayout>
                                    </RelativeLayout>

                                    <LinearLayout
                                        android:layout_width="@dimen/_200sdp"
                                        android:layout_height="@dimen/_250sdp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/_20sdp"
                                        android:layout_marginBottom="@dimen/_20sdp"
                                        android:layout_weight="1"
                                        android:background="@drawable/roundedcornergrey">

                                        <ImageView
                                            android:id="@+id/ivVoterBack"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_margin="@dimen/_25sdp"
                                            android:src="@drawable/voterback" />
                                    </LinearLayout>


                                    <EditText
                                        android:id="@+id/etVotername"
                                        style="@style/App_EditTextStyle"
                                        android:layout_width="match_parent"
                                        android:hint="Name"
                                        android:textAllCaps="true" />

                                    <RelativeLayout
                                        android:id="@+id/rvSelctVoterDOB"
                                        style="@style/App_EditTextStyle"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_35sdp"
                                        android:layout_marginTop="@dimen/_10sdp">

                                        <TextView
                                            android:id="@+id/tvDObVoter"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="0dp"
                                            android:fontFamily="@font/monteregular"
                                            android:singleLine="true"
                                            android:text="Date of Birth" />

                                    </RelativeLayout>


                                    <EditText
                                        android:id="@+id/etVoterNumber"
                                        style="@style/App_EditTextStyle"
                                        android:layout_width="match_parent"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_marginBottom="@dimen/_10sdp"
                                        android:hint="Voter Id Number"
                                        android:textAllCaps="true" />


                                </LinearLayout>


                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp">

        <Button
            android:id="@+id/btSubmit"
            style="@style/Button_withGreen"
            android:layout_weight="1"
            android:background="@color/colorYellow"
            android:text="NEXT" />

    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llMainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_17sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_17sdp"
        android:layout_marginBottom="@dimen/_35sdp"
        android:clipToPadding="true"
        app:cardCornerRadius="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivTimeZone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_95sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                     />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvGreeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserratsemibold"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/colorYellow"
                        android:textSize="@dimen/_15sdp" />
                    <TextView
                        android:id="@+id/tvNameofUser"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_15sdp"
                        android:fontFamily="@font/montesemibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:padding="@dimen/_2sdp"
                        android:visibility="gone"
                        android:src="@drawable/caution" />

                    <TextView
                        android:id="@+id/tvNoticeMessage"
                        style="@style/TextviewwithoutSize"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:fontFamily="@font/monteregular"
                        android:text="@string/noticed_error_messge"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/TextviewwithoutSize"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/montesemibold"
                    android:gravity="top"
                    android:text="@string/please_enter_your_mobile_number"
                    android:textColor="@color/colorYellow"
                    android:textSize="@dimen/_11sdp"
                    android:visibility="gone" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/etMobileNumber"
                        style="@style/App_EditTextStyle"
                        android:layout_width="match_parent"
                        android:hint="Enter mobile"
                        android:imeOptions="actionDone"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:visibility="gone" />


                    <Button
                        android:layout_below="@+id/etMobileNumber"
                        android:id="@+id/btSendOTP"
                        android:layout_marginTop="@dimen/_30sdp"
                        style="@style/Button_withGreen"
                        android:layout_width="match_parent"
                        android:text="GENERATE OTP" />

                    <LinearLayout
                        android:id="@+id/llChangeMobile"
                        android:layout_below="@id/btSendOTP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:layout_alignParentBottom="true"
                        android:gravity="bottom|center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvForgot"
                            style="@style/App_TextViewSmall"
                            android:layout_width="wrap_content"
                            android:fontFamily="@font/monteregular"
                            android:gravity="end"
                            android:text="Not your mobile number?"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/tvChangeMobile"
                            style="@style/App_TextViewSmall"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:focusable="false"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:fontFamily="@font/montserratbold"
                            android:text="Change Mobile"
                            android:textColor="@color/colorBlue"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_show_msg_sucess"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#A5D6A7"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Sucessfully Done"
                    android:textColor="#1E6023"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_show_msg_fail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFCDD2"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Sucessfully Done"
                    android:textColor="#F44336"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>